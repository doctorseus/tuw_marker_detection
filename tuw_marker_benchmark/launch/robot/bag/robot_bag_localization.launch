<launch>
    <arg name="bag_file" />
    <arg name="room" />

    <arg name="type" default="aruco" />
    <arg name="rate" default="1.0" />

    <include file="$(find tuw_marker_benchmark)/launch/robot/bag/robot_inc_bag.launch">
        <arg name="bag" default="$(arg bag_file)" />
        <arg name="rate" default="$(arg rate)" />
    </include>

    <!-- Localization -->
    <include file="$(find tuw_p3dx)/launch/map_server.launch">
		<arg name="room" default="$(arg room)" />
    </include>
    <include file="$(find tuw_marker_benchmark)/launch/robot/bag/robot_inc_localization.launch" />

    <!-- Marker map -->
    <include file="$(find tuw_marker_benchmark)/launch/robot/robot_inc_tf_markers.launch" />

    <!-- ArUco benchmark -->
    <include file="$(find tuw_marker_benchmark)/launch/robot/bag/robot_inc_marker_$(arg type).launch" />
    <include file="$(find tuw_marker_benchmark)/launch/robot/bag/robot_inc_benchmark.launch">
        <arg name="output_directory" default="$(arg type)/$(arg bag_file)" />
    </include>

    <!-- reconfigure Laser -->
    <node pkg="rqt_reconfigure" type="rqt_reconfigure" name="rqt_reconfigure" />

    <!-- RViz -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d /home/privacy/.rviz/robot_cam.rviz" />

</launch>

