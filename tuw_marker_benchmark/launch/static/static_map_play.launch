<launch>
    <arg name="base" />
    <arg name="pos" />

    <include file="$(find tuw_marker_benchmark)/launch/static/static_inc_tf_dummy.launch" />

    <node pkg="tf" type="static_transform_publisher" name="marker_base" if="$(eval arg('base') == 0)" args="1.122 0 0 0 0 0 odom marker_base 100" />

    <arg name="anchor_height" default="0.358" />
    <node pkg="tf" type="static_transform_publisher" name="marker_anchor" if="$(eval arg('pos') == 0)" args="0 0 $(arg anchor_height)  1.17809 0 0 marker_base marker_anchor 100" />
    <node pkg="tf" type="static_transform_publisher" name="marker_anchor" if="$(eval arg('pos') == 1)" args="0 0 $(arg anchor_height)  0.78539 0 0 marker_base marker_anchor 100" />
    <node pkg="tf" type="static_transform_publisher" name="marker_anchor" if="$(eval arg('pos') == 2)" args="0 0 $(arg anchor_height)  0.39269 0 0 marker_base marker_anchor 100" />
    <node pkg="tf" type="static_transform_publisher" name="marker_anchor" if="$(eval arg('pos') == 3)" args="0 0 $(arg anchor_height)  0.00000 0 0 marker_base marker_anchor 100" />
    <node pkg="tf" type="static_transform_publisher" name="marker_anchor" if="$(eval arg('pos') == 4)" args="0 0 $(arg anchor_height) -0.39269 0 0 marker_base marker_anchor 100" />
    <node pkg="tf" type="static_transform_publisher" name="marker_anchor" if="$(eval arg('pos') == 5)" args="0 0 $(arg anchor_height) -0.78539 0 0 marker_base marker_anchor 100" />
    <node pkg="tf" type="static_transform_publisher" name="marker_anchor" if="$(eval arg('pos') == 6)" args="0 0 $(arg anchor_height) -1.17809 0 0 marker_base marker_anchor 100" />

    <include file="$(find tuw_marker_benchmark)/launch/static/static_inc_tf_markers.launch" />
    <include file="$(find tuw_marker_benchmark)/launch/static/static_inc_misc.launch" />
</launch>