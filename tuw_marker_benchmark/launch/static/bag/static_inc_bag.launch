<launch>
    <arg name="bag" />
    <arg name="rate" default="1.0" />

    <!-- Play bag -->
    <param name="use_sim_time" value="true"/>
    <node pkg="rosbag" type="play" name="player" args="--keep-alive --clock --delay 2 --rate $(arg rate) $(find tuw_marker_benchmark)/bags/static/$(arg bag)"/>

    <!-- Uncompress video -->
    <node name="republish" type="republish" pkg="image_transport" args="compressed in:=/camera/image_raw raw out:=/camera/image_raw_uncompressed" />
</launch>

